     <TextView
         android:id="@+id/attendee_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:layout_marginLeft="17dp"
         android:layout_marginTop="16dp"
         android:singleLine="true"
         android:text="TLDV Member A"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:textColor="@color/med_gray"
         android:textStyle="bold" />

     <TextView
         android:id="@+id/attendee_status"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="17dp"
         android:layout_below="@+id/attendee_overflow"
         android:text="Reserved"
         android:textAppearance="?android:attr/textAppearanceSmall"
         android:textColor="@color/med_gray" />

     <Button
         android:id="@+id/attendee_overflow"
         android:layout_width="25dip"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/attendee_name"
         android:layout_alignParentRight="true"
         android:layout_alignTop="@+id/attendee_name"
         android:layout_marginRight="17dp"
         android:background="@drawable/app_theme_list_overflow_button" />

</RelativeLayout>










