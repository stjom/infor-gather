<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_theme_gradient_off_white"
    android:orientation="vertical"
    android:weightSum="100" >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/app_theme_background_repeating_leather"
        android:gravity="right|center_vertical"
        android:padding="5dip"
        android:visibility="gone" >

        <ImageButton
            android:id="@+id/attach"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/app_theme_transparent_button"
            android:drawableBottom="@drawable/ic_share_blue"
            android:gravity="top"
            android:src="@drawable/ic_action_camera_lite" />

        <ImageButton
            android:id="@+id/location"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/app_theme_transparent_button"
            android:gravity="top"
            android:src="@drawable/ic_action_location" />

        <ImageButton
            android:id="@+id/proceed"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/app_theme_transparent_button"
            android:gravity="top"
            android:src="@drawable/ic_action_proceed_lite" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:fillViewport="true" >

        <!-- Link to Registration Screen -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="16dip"
                android:layout_marginBottom="5dip"
                android:text="@string/label_email"
                android:textStyle="italic"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/dark_gray" />

            <EditText
                android:id="@+id/email"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginBottom="3dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="@drawable/app_theme_flat_button"
                android:inputType="none"
                android:paddingLeft="10dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:hint="@string/hint_email"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:textColorHint="@color/med_gray" />
            
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="16dip"
                android:layout_marginBottom="5dip"
                android:text="@string/label_tradename"
                android:textStyle="italic"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/dark_gray" />

            <EditText
                android:id="@+id/tradename"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginBottom="3dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="@drawable/app_theme_flat_button"
                android:paddingLeft="10dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:hint="@string/hint_tradename"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:textColorHint="@color/med_gray" >

                <requestFocus />
            </EditText>
            
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="16dip"
                android:layout_marginBottom="5dip"
                android:text="@string/hint_firstname"
                android:textStyle="italic"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/dark_gray" />

            <EditText
                android:id="@+id/firstname"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginBottom="3dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="@drawable/app_theme_flat_button"
                android:paddingLeft="10dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:textColorHint="@color/med_gray" />
            
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="16dip"
                android:layout_marginBottom="5dip"
                android:text="@string/hint_lastname"
                android:textStyle="italic"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/dark_gray" />

            <EditText
                android:id="@+id/lastname"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginBottom="3dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="@drawable/app_theme_flat_button"
                android:paddingLeft="10dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:textColorHint="@color/med_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="16dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:text="@string/label_birthday"
                    android:textStyle="italic"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/dark_gray" />

                <Button
                    android:id="@+id/birthday"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:background="@drawable/app_theme_flat_button"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:text="01/01/2001"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:textColorHint="@color/med_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="16dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:text="@string/label_address"
                    android:textStyle="italic"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/dark_gray" />

                <Button
                    android:id="@+id/address"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:background="@drawable/app_theme_flat_button"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:text="Ayala Ave., Makati City"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:textColorHint="@color/med_gray" />
            </LinearLayout>
            
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="16dip"
                android:layout_marginBottom="5dip"
                android:text="@string/hint_zipcode"
                android:textStyle="italic"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/dark_gray" />

            <EditText
                android:id="@+id/zipcode"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginBottom="3dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="@drawable/app_theme_flat_button"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:textColorHint="@color/med_gray" />
            
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="16dip"
                android:layout_marginBottom="5dip"
                android:text="@string/label_website"
                android:textStyle="italic"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/dark_gray" />

            <EditText
                android:id="@+id/website"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginBottom="3dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="@drawable/app_theme_flat_button"
                android:hint="@string/hint_bizurl"
                android:inputType="textUri"
                android:paddingLeft="10dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:textColorHint="@color/med_gray" />
            
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="16dip"
                android:layout_marginBottom="5dip"
                android:text="@string/label_facebook"
                android:textStyle="italic"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/dark_gray" />

            <EditText
                android:id="@+id/fb_url"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginBottom="3dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="@drawable/app_theme_flat_button"
                android:hint="@string/hint_fburl"
                android:inputType="textUri"
                android:paddingLeft="10dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:textColorHint="@color/med_gray" />
            
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="16dip"
                android:layout_marginBottom="5dip"
                android:text="@string/label_gplus"
                android:textStyle="italic"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/dark_gray" />

            <EditText
                android:id="@+id/gp_url"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginBottom="3dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="@drawable/app_theme_flat_button"
                android:hint="@string/hint_gp_url"
                android:inputType="textUri"
                android:paddingLeft="10dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:textColorHint="@color/med_gray" />
            
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="16dip"
                android:layout_marginBottom="5dip"
                android:text="@string/label_twitter"
                android:textStyle="italic"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/dark_gray" />

            <EditText
                android:id="@+id/twtr_url"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginBottom="3dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="@drawable/app_theme_flat_button"
                android:hint="@string/hint_twtr_url"
                android:inputType="textUri"
                android:paddingLeft="10dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:textColorHint="@color/med_gray" />
            
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="16dip"
                android:layout_marginBottom="5dip"
                android:text="@string/label_landline"
                android:textStyle="italic"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/dark_gray" />

            <EditText
                android:id="@+id/landline"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginBottom="3dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="@drawable/app_theme_flat_button"
                android:hint="@string/hint_landline"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:textColorHint="@color/med_gray" />
            
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="16dip"
                android:layout_marginBottom="5dip"
                android:text="@string/label_mobile"
                android:textStyle="italic"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/dark_gray" />

            <EditText
                android:id="@+id/mobile"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginBottom="16dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="@drawable/app_theme_flat_button"
                android:hint="@string/hint_mobile"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:textColorHint="@color/med_gray" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>